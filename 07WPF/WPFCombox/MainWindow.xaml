<Window x:Class="WPFCombox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCombox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Attachement-->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Attache Nomal</TextBlock>
        <ComboBox Name ="CBNormal" Grid.Row="1" Width="120" Height="30" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Item 1" />
            <ComboBoxItem Content="Item 2" />
            <ComboBoxItem Content="Item 3" />

        </ComboBox>
        <TextBox Grid.Row="2" Width="120" Height="60" Name="TBNormal" TextChanged="TBNormal_TextChanged" />
        <!--by Class-->
        <TextBlock Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20">Attache by Class</TextBlock>
        <ComboBox Name="CBClass" Grid.Row="1" Grid.Column="1" Width="120" Height="30" SelectionChanged="CBClass_SelectionChanged"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="120" Height="60" Name="TBClass" TextChanged="TBClass_TextChanged" />

        <!--by DataTemplate-->
        <DataGrid Grid.Row="0" Grid.Column="2" AutoGenerateColumns="True" Name="DGData" AutoGeneratingColumn="DGData_AutoGeneratingColumn">

            <!-- 直接设置Header -->
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="PS" Binding="{Binding Ps}"/>
            </DataGrid.Columns>-->
        </DataGrid>
        <Button Name="ButtonMoreInfo" Content="Get more information" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Click="Button_Click"/>
        <Button Content="All information" Grid.Column="2" Grid.Row="2" Click="Button_Click_1"/>
    </Grid>
</Window>
